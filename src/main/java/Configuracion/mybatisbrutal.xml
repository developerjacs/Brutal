<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="true"/>        <!-- Habilita o inhabilita globalmente la carga diferida (lazy loading). Cuando está activo, todas las relaciones se cargan en modo diferido -->
        <setting name="aggressiveLazyLoading" value="false"/>    <!-- Hace que todos los atributos de un objeto con propiedades con carga diferida (lazy loaded) se cargarán cuando se solicite cualquiera de ellos -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>  <!-- Mapea automáticamente los nombres clásicos de columnas de base de datos A_COLUMN a nombres clásicos de propiedades Java aColumn -->
        <setting name="lazyLoadTriggerMethods" value=""/>        <!-- Metodos del objeto que disparan la ejecucion de la sentencia,
                                                                      Nosotros solo queremos lanzarlos cuando los llamemos explicitamente                                                                      Sin esto, por ejemplo se nos dispara al iterar una lista de objetos en un for-->
    </settings>
    <typeAliases>
        <package name="Models"/>
    </typeAliases>
    
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://192.168.1.34:3306/prueba?serverTimezone=UTC"/>
                <property name="username" value="juan"/>
                <property name="password" value="juan"/>
                <property name="poolPingEnabled" value="true" />
                <property name="poolPingQuery" value="SELECT 1 " />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <package name="Mappers"/>
    </mappers>
</configuration>
